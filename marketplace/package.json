{
  "name": "illuvrse-marketplace",
  "version": "0.1.0",
  "private": true,
  "description": "ILLUVRSE Marketplace - monorepo containing server and ui",
  "workspaces": [
    "ui"
  ],
  "scripts": {
    "start": "node ./server/server.js",
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules --inspect=0 server/server.ts",
    "build": "tsc -p tsconfig.json",
    "build:server": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint \"**/*.{ts,tsx,js,jsx}\" --max-warnings=0 || true",
    "test": "npm run test:server",
    "test:server": "vitest run --root server --reporter default",
    "seed": "node -r ts-node/register server/lib/seed.ts"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cookie-parser": "^1.4.6",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.0",
    "nodemailer": "^6.9.4",
    "pg": "^8.11.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/multer": "^1.4.7",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.0",
    "vitest": "^1.4.3",
    "eslint": "^8.45.0",
    "@typescript-eslint/parser": "^6.5.0",
    "@typescript-eslint/eslint-plugin": "^6.5.0"
  }
}

