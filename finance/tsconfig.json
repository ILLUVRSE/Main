{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": [
    "service/src/**/*.ts",
    "lib/**/*.ts",
    "exports/**/*.ts",
    "tools/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": ["dist", "node_modules", "test", "acceptance-tests"]
}
