# Example environment variables for marketplace/ui (Next.js)
# Copy this to .env.local and edit values for your environment.
# Do NOT commit secrets into source control.

# Base URL of the Marketplace backend API (no trailing slash)
NEXT_PUBLIC_MARKETPLACE_BASE_URL=http://127.0.0.1:3000

# App environment tag (dev | staging | prod)
NEXT_PUBLIC_APP_ENV=dev

# Optional: URL where the UI is hosted (used by Playwright / tests if needed)
NEXT_PUBLIC_APP_URL=http://127.0.0.1:3000

# Agent proxy backend override (if different than MARKETPLACE_BASE)
# MARKETPLACE_BASE=http://127.0.0.1:3000

# Optional: Feature toggles for dev/test
# When true, UI will show dev-only controls like "Simulate payment" or synthetic sign-in
NEXT_PUBLIC_UI_DEV_MODE=true

# Optional: Analytics / Sentry DSN (do not commit real DSNs here)
NEXT_PUBLIC_SENTRY_DSN=

# Optional: Toggle for using streaming agent endpoint
NEXT_PUBLIC_AGENT_STREAM=true

