{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "lib": [
      "ES2019",
      "DOM",
      "DOM.Iterable"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dist",
    "rootDir": ".",
    "types": [
      "node",
      "jest"
    ],
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true
  },
  "include": [
    "kernel/**/*.ts",
    "kernel/**/*.tsx",
    "memory-layer/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "control-panel",
    "RepoWriter",
    "IDEA"
  ]
}