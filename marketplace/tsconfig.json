{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020", "DOM"],
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "declaration": true
  },
  "include": ["server/**/*", "sandbox/**/*", "test/**/*", "scripts/**/*"],
  "exclude": ["node_modules", "dist"]
}

