{
  "name": "marketplace",
  "version": "0.1.0",
  "private": true,
  "description": "ILLUVRSE Marketplace service (catalog, preview, checkout, license, delivery, proofs)",
  "main": "dist/server/index.js",
  "type": "commonjs",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules --no-notify server/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server/index.js",
    "migrate": "bash ./scripts/runMigrations.sh",
    "run-local": "bash ./run-local.sh",
    "test": "vitest",
    "test:unit": "vitest run test/unit --runInBand",
    "test:e2e": "vitest run test/e2e --runInBand",
    "test:contract": "vitest run test/contract --runInBand",
    "lint": "eslint --ext .ts server || true",
    "format": "prettier --write \"**/*.{ts,js,json,md}\""
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "cookie-parser": "^1.4.6",
    "cross-fetch": "^3.1.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "pg": "^8.10.0",
    "uuid": "^9.0.0",
    "@aws-sdk/client-s3": "^3.337.0",
    "@aws-sdk/client-kms": "^3.337.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.2",
    "@types/pg": "^8.6.6",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^2.8.8",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6",
    "vitest": "^1.2.1"
  }
}

